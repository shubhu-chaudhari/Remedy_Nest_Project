<% if(disease != null) { %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <%- disease.name %>
    </li>
  </ol>
</nav>

<div class="row">
  <div class="col-12 col-md-4">
    <img
      src="/img/<%- disease.image %>"
      class="img-fluid sticky-top"
      style="top: 20px"
      alt="<%- disease.name %>"
      loading="lazy"
    />
  </div>

  <div class="col-12 col-md-8">
    <div class="row">
      <div class="col-12"><h1><%- disease.name %></h1></div>
      <div class="col-12 mb-4">
        <i class="bi bi-tag"></i> <%- disease.category %>
      </div>
      <div class="col-12" style="white-space: pre-line">
        <h4>Symptoms and Causes</h4>
        <%- disease.description %>
      </div>
    </div>

    <div class="row pt-4">
      <div class="col-12">
        <h4>Remedies</h4>
        <ul class="list-group list-group-flush">
          <% disease.remedies.forEach(function(remedies, index){ %>
          <li class="list-group-item"><%= remedies %></li>
          <% }) %>
        </ul>
      </div>
    </div>
    <div class="row pt-4">
      <div class="col-12">
        <h4>Links</h4>
        <ul>
          <% disease.links.forEach(function(link, index) { %>
          <li><a href="<%= link %>" target="_blank"><%= link %></a></li>
          <% }) %>
        </ul>
      </div>
    </div>
    <div class="row pt-4">
      <div class="col-12">
        <h4>Disclaimer</h4>
        <p><%= disease.disclaimer %></p>
      </div>
    </div>
  </div>
</div>

<% } else { %>
<p>No item found.</p>
<% } %>
